<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="logo.jpeg">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Bootstrap Icons -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    </head>
    <body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="{{ path('app_login') }}">My Animal App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_animal_index') }}">Animals List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_animal_new') }}">Create Animal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Profile</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>


        {% block body %}{% endblock %}
    </body>

    
<style>
    /* Navbar Styles */
    .navbar {
        background-color: #4CAF50;
        padding: 10px 20px;
        border-radius: 0;
    }

    .navbar-brand {
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .navbar-nav .nav-item .nav-link {
        color: white !important;
        font-size: 1.1rem;
        padding: 10px 15px;
    }

    .navbar-nav .nav-item .nav-link:hover {
        background-color: #45a049;
        border-radius: 5px;
    }

    .navbar-nav {
        margin-left: auto;
    }

    .navbar-toggler {
        border: none;
    }

    /* Mobile Navigation */
    @media (max-width: 768px) {
        .navbar-nav {
            display: none;
            width: 100%;
            text-align: center;
            margin-top: 15px;
        }

        .navbar-nav.show {
            display: block;
        }

        .navbar-toggler {
            display: block;
        }
    }

    /* Form Styling */
    .container {
        max-width: 800px;
        margin-top: 50px;
    }

    .card {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-size: 1.8rem;
        color: #4CAF50;
        margin-bottom: 20px;
    }

    .btn-submit {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 1.2rem;
    }

    .btn-submit:hover {
        background-color: #45a049;
    }

    .back-link {
        display: inline-block;
        text-decoration: none;
        margin-top: 20px;
        color: #4CAF50;
        font-size: 1.1rem;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>
</html>
