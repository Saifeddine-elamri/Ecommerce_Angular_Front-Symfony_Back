<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Commandes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
        }

        .sidebar a {
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
            font-size: 18px;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .sidebar .active {
            background-color: #007bff;
        }

        .content {
            margin-left: 250px;
            padding: 30px;
        }

        /* Table */
        .order-table {
            margin-top: 30px;
        }

        .order-table th, .order-table td {
            text-align: center;
        }

        .order-table th {
            background-color: #f8f9fa;
        }

        .order-table td {
            background-color: #e9ecef;
        }

        .order-table .order-date {
            font-style: italic;
            color: #6c757d;
        }

        /* Cards */
        .card {
            margin-bottom: 20px;
        }

        /* Footer */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px;
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .content {
                margin-left: 200px;
            }
        }

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-white text-center">Dashboard</h3>
        <a href="#" class="active">Commandes</a>
        <a href="{{ path('product_list') }}">Produits</a>
        <a href="#">Clients</a>
        <a href="#">Statistiques</a>
        <a href="#">Paramètres</a>
    </div>

    <!-- Content -->
    <div class="content">
        <h1 class="text-center mb-4">Liste des Commandes</h1>

        <!-- Cards -->
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total des Commandes</h5>
                        <p class="card-text">15</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Commandes Traitées</h5>
                        <p class="card-text">10</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Commandes En Attente</h5>
                        <p class="card-text">5</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
      {% if orders is not empty %}
    <table class="table table-striped table-hover table-bordered order-table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Articles</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.name }}</td>
                    <td>{{ order.email }}</td>
                    <td>{{ order.adress }}</td>
                    <td>
                        <ul class="order-items-list">
                            {% for item in order.cartItems %}
                                <li>
                                    <span class="item-name">{{ item.name }}</span> 
                                    <span class="item-quantity">({{ item.quantity }})</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td class="order-date">{{ order.date | date("d/m/Y H:i") }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="text-center text-muted">Aucune commande trouvée.</p>
{% endif %}
    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2025 Mon Application - Tous droits réservés</p>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    /* Amélioration générale du tableau */
    .order-table {
        border-collapse: separate;
        border-spacing: 0 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        background-color: #fff;
        border-radius: 8px;
    }

    .order-table th, .order-table td {
        padding: 12px 18px;
        text-align: left;
        vertical-align: middle;
        border: 1px solid #ddd;
        font-size: 14px;
    }

    .order-table th {
        background-color: #343a40;
        color: white;
        font-size: 16px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .order-table td {
        background-color: #f8f9fa;
    }

    .order-table tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    .order-items-list {
        padding-left: 20px;
        list-style-type: none;
    }

    .order-items-list li {
        font-size: 14px;
        margin-bottom: 5px;
    }

    .item-name {
        font-weight: bold;
        color: #333;
    }

    .item-quantity {
        color: #555;
    }

    .order-date {
        font-style: italic;
        color: #6c757d;
    }

    .order-table .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    /* Message quand aucune commande n'est trouvée */
    .text-muted {
        font-size: 18px;
    }

    /* Styling des icônes de dates (facultatif) */
    .order-date::before {
        content: '\1F4C5';  /* Icône calendrier */
        padding-right: 5px;
    }
</style>