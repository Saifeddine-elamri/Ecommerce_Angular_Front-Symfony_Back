{% extends 'base.html.twig' %}

{% block title %}Edit Animal{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier les informations de l'animal</h1>

        <!-- Formulaire d'édition de l'animal -->
        <div class="card shadow-lg border-light rounded">
            <div class="card-body">
                {{ include('animal/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>

        <!-- Lien pour revenir à la liste des animaux -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_animal_index') }}" class="btn btn-info btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste des animaux
            </a>
        </div>

        <!-- Formulaire de suppression de l'animal -->
        <div class="mt-4 text-center">
            {{ include('animal/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    /* Global Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
    }

    /* Container and Card */
    .container {
        max-width: 800px;
        padding: 30px;
    }

    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

    /* Button Styles */
    .btn {
        font-size: 1.1rem;
        padding: 12px 25px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-info:hover {
        background-color: #138496;
        transform: translateY(-2px);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }

    /* Form Field Styles */
    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ccc;
        padding: 12px 15px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
    }

    .form-label {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: #555;
    }

    /* Focus and Validation */
    .needs-validation .form-control:invalid {
        border-color: #e74c3c;
    }

    .needs-validation .form-control:valid {
        border-color: #2ecc71;
    }
</style>
{% endblock %}
